<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= ID %></title>
    <link rel="stylesheet" href="/assets/style.css" />
  </head>
  <body>
    <main>
      <h1>Person: <%= ID %></h1>
      <h2>Mensaje: <%= MESSAGE %></h2>

      <% const showMessage = () => { %>
        <% for (let i = 0; i < TIMES; i++) { %>
          <li><%= MESSAGE %> <%= ID %></li>
        <% } %>
      <% } %>

      <% switch(MESSAGE) {
        case 'Hola':
        case 'Adios':
        case 'Bienvenido': %>
          <ul><% showMessage() %></ul>
          <% break;
        default: %>
        <p>El mensaje no es valido</p>
          <% break;
      } %>
    </main>
  </body>
</html>
